<h4 class="text-center">ユーザ情報詳細</h4>
<table class="tb01 mx-auto">
  <tr>
    <th>ニックネーム</th>
    <td><%= @user.user_name %></td>
  </tr>
  <tr>
    <th>自己紹介</th>
    <td><%= @user.user_introduction %></td>
  </tr>
  <tr>
    <th>名前</th>
    <td><%= @user.last_name %> <%= @user.first_name %></td>
  </tr>
  <tr>
    <th>フリガナ</th>
    <td><%= @user.last_name_kana %> <%= @user.first_name_kana %></td>
  </tr>
  <tr>
    <th>郵便番号（ハイフンなし）</th>
    <td><%= @user.postal_code %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= @user.address %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @user.email %></td>
  </tr>
  <tr>
    <th>電話番号（ハイフンなし）</th>
    <td><%= @user.telephone_number %></td>
  </tr>
  <tr>
    <th>生年月日</th>
    <td><%= @user.birth_date %></td>
  </tr>
  <tr>
    <th>性別</th>
    <td><%= @user.sex_i18n %></td>
  </tr>
  <tr>
    <th>会員ステータス</th>
    <td>
      <% if @user.is_deleted %>
        <span class="text-secondary font-weight-bold">退会</span>
      <% else %>
        <span class="text-success font-weight-bold">有効</span>
      <% end %>
    </td>
  </tr>
</table>
<table class="mx-auto">
  <tr>
    <td><%= link_to '編集する', edit_admin_user_path(@user.id), class:"btn btn-success px-4 mt-3 ml-5" %></td>
    <td><%= link_to '投稿一覧', admin_posts_path(user_id: @user.id), class:"btn btn-primary px-4 mt-3 ml-5" %></td>
  </tr>
</table>