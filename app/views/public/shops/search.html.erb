<%= form_with url: shops_search_path, local: true, method: :get do |f| %>
  <%= f.text_field :keyword %>
  <%= f.submit '検索' %>
<% end %>
<%=form_with url: new_post_path, method: :get do |f| %>
  <% @shops.each do |shop| %>
    <%= f.radio_button :select_shop, shop[:id]  %>
    <%= f.label :select_shop do %>
      <%= image_tag shop[:photo] %> 店名：<%= shop[:name] %> : 住所：<%= shop[:address] %>
    <% end %><br>
  <% end %>
  <%= f.submit '決定', class:"btn btn-primary px-4" %>
<% end %>

