<h2 class="text-center mb-3">新規会員登録</h2>

<%= render "public/shared/error_messages", resource: resource %>

<%= form_with model: @user, url: user_registration_path do |f| %>

  <table class="tb01 mx-auto">
    <tr>
      <th>ユーザーネーム</th>
      <td><%= f.text_field :user_name %></td>
    </tr>
    <tr>
      <th>名前</th>
      <td>　姓<%= f.text_field :last_name, placeholder: "令和" %></td>
      <td>　名<%= f.text_field :first_name, placeholder: "太郎" %></td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td>セイ<%= f.text_field :last_name_kana, placeholder: "レイワ" %></td>
      <td>メイ<%= f.text_field :first_name_kana, placeholder: "タロウ" %></td>
    </tr>
    <tr>
      <th>郵便番号（ハイフンなし）</th>
      <td><%= f.text_field :postal_code, placeholder: "1234567" %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= f.text_field :address, placeholder: "東京都足立区○○町1-1-1", class:"w-100" %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= f.text_field :email, placeholder: "example@gmail.com", class:"w-100" %></td>
    </tr>
    <tr>
      <th>電話番号（ハイフンなし）</th>
      <td><%= f.text_field :telephone_number, placeholder: "09012345678" %></td>
    </tr>
    <tr>
      <th>生年月日</th>
      <td><%= f.date_select :birth_date, use_month_numbers: true, start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1) %></td>
    </tr>
    <tr>
      <th>性別</th>
      <td>
        <%= f.radio_button :sex, User.sexes.key(0) %>
        <%= f.label :sex, User.sexes_i18n[:male] %>
        <%= f.radio_button :sex, User.sexes.key(1) %>
        <%= f.label :sex, User.sexes_i18n[:female] %>
        <%= f.radio_button :sex, User.sexes.key(2) %>
        <%= f.label :sex, User.sexes_i18n[:other] %>
      </td>
    </tr>
    <tr>
      <th>パスワード（６文字以上）</th>
      <td><%= f.password_field :password, autocomplete: "new-password" %></td>
    </tr>
    <tr>
      <th>パスワード（確認用）</th>
      <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
    </tr>
  </table>
  <div class="actions">
    <%= f.submit "新規会員登録" %>
  </div>
<% end %>

<p class="text-center">すでに登録済みの方は<%= link_to 'こちら', user_session_path %>からログインしてください。</p>
