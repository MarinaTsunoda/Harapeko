<h2>登録情報編集</h2>
※生年月日・性別は変更できません。

<%= render "devise/shared/error_messages", resource: @user %>

<%= form_with model: @user, url: users_information_path, method: :patch do |f| %>

  <table>
    <tr>
      <th>名前</th>
      <td>　姓<%= f.text_field :last_name %></td>
      <td>　名<%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td>セイ<%= f.text_field :last_name_kana %></td>
      <td>メイ<%= f.text_field :first_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号（ハイフンなし）</th>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <th>電話番号（ハイフンなし）</th>
      <td><%= f.text_field :telephone_number %></td>
    </tr>
    <tr>
      <th>パスワード（６文字以上）</th>
      <td><%= f.password_field :password %></td>
    </tr>
    <tr>
      <th>パスワード（確認用）</th>
      <td><%= f.password_field :password_confirmation %></td>
    </tr>
  </table>
  <div class="actions">
    <%= f.submit "変更を保存" %>
  </div>
<% end %>