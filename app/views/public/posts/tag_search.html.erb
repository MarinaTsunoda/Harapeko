<%= form_with url: search_posts_path, local: true, method: :get do |f| %>
  <% @tag_genres.each do |tag_genre| %>
    <%= tag_genre.name %>
    <%= f.collection_check_boxes(:tag_ids, Tag.where(tag_genre_id: tag_genre.id), :id, :name) do |tag| %>
      <%= tag.check_box %>
      <%= tag.text %>
    <% end %>
  <% end %>          
  <%= f.submit "検索" %>
<% end %>